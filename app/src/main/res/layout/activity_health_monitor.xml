<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#00aff0"
    tools:context="com.cmpe283.vmhealthmonitor.activity.HealthMonitorActivity">

    <com.jjoe64.graphview.GraphView
        android:layout_width="250sp"
        android:layout_height="290sp"
        android:layout_marginLeft="45sp"
        android:visibility="invisible"
        android:id="@+id/graph"
        android:layout_alignParentTop="true"
         />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU Usage"
        android:id="@+id/cpuusage"
        android:layout_above="@+id/netusage"
        android:layout_alignStart="@+id/netusage" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MEM Usage"
        android:id="@+id/memoruusage"
        android:layout_below="@+id/diskusage"
        android:layout_alignEnd="@+id/graph" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disk Usage"
        android:id="@+id/diskusage"
        android:layout_marginTop="58dp"
        android:layout_below="@+id/graph"
        android:layout_alignEnd="@+id/memoruusage" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="N/W Usage"
        android:id="@+id/netusage"
        android:layout_alignTop="@+id/memoruusage"
        android:layout_alignStart="@+id/graph" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:text="Time"
        android:textSize="18sp"
        android:id="@+id/textView5"
        android:layout_below="@+id/graph"
        android:layout_centerHorizontal="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:textSize="18sp"
        android:id="@+id/textView6"
        android:layout_marginTop="120sp"
        />
</RelativeLayout>
